<html lang="en">
{{>partials/navbar}}
<body class="container">
<head>
   {{>partials/header}}
</head>

<form method="post" role="form">
   <div class="form-group">
      <label for="goal">Goal</label>
      <input type="text" class="form-control" id="goal" name="goal" placeholder="Goal Name" required>
   </div>

   <label for="start">Goal Date:</label>

   <input type="date" id="goalDate" name="goalDate" value="2021-03-17" min="2021-03-17" max="2023-01-01">
   
   <div class="form-group">
      <label for="goal">Expected Reps</label>
      <input type="number" class="form-control" id="exReps" name="exReps" placeholder="Expected Reps" required>
   </div>

   <div class="form-group">
      <label for="goal">Expected Time (Minutes)</label>
      <input type="number" class="form-control" id="exTime" name="exTime" placeholder="Expected Time (Minutes)" required>
   </div>

   <div class="form-group">
      <input type="submit" value="Add Goal" class="btn btn-primary">
   </div>

   <a href="/mygoals" class="btn btn-primary">
      cancel
   </a>

</form>
</body>

{{>partials/footer}}
</html>
