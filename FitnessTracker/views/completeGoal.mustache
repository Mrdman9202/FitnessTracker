<html lang="en">
{{>partials/navbar}}
<body class="container">
<head>
   {{>partials/header}}
</head>


<form method="post" role="form">
   <div class="form-group">
      <label for="goal">Goal</label>
      <input type="text" class="form-control" id="goal" name="goal" placeholder="{{goal}}" readonly>
   </div>

    <label for="start">Goal Date:</label>
   <input type="label" id="goalDate" name="goalDate" value="{{goalDate}}" readonly>

   <div class="form-group">
      <label for="goal">Reps</label>
      <input type="number" class="form-control" id="reps" name="reps" placeholder="Expected Reps: {{exReps}}" min="0" max="100" required>
   </div>

   <div class="form-group">
      <label for="goal">Time (Minutes) </label>
      <input type="number" class="form-control" id="time" name="time" placeholder="Expected Time (Minutes): {{exTime}}" min="0" max="280" required>
   </div>

   <div class="form-group">
      <input type="submit" value="Complete Goal" class="btn btn-primary">
   </div>

   <a href="/mygoals" class="btn btn-primary">
      cancel
   </a>

</body>

{{>partials/footer}}